<div class="row mb-1">
  <div class="col">
    <div class="card project-card">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag "/images/#{project_kind}s/#{project.image}", class:"image-project" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= project.name %></h5>
            <%= markdown(project.text) %>

            <% if project.quotes %>
              <% project.quotes.each do |quote| %>
                <blockquote class="blockquote px-xxl-5">
                  <%= markdown(quote.text) %>
                  <footer class="blockquote-footer">
                    <% if quote.author.link %>
                      <a href="<%= quote.author.link %>" target="_blank"><%= quote.author.name %></a>, <%= quote.author.description %>.
                    <% else %>
                      <strong><%= quote.author.name %></strong>, <%= quote.author.description %>.
                    <% end %>
                  </footer>
                </blockquote>
              <% end %>
            <% end %>
          </div>
          <ul class="list-group list-group-flush">
            <% project.details.each do |key, value| %>
              <%= project_detail(key, value) %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<hr class="mx-5">
